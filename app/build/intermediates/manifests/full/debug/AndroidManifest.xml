            android:name="com.buma.designapp.GoldenRules"
            android:label="@string/title_activity_golden_rules" />
        <activity
            android:name="com.buma.designapp.HomeGoldenRules"
            android:label="@string/title_activity_home_golden_rules" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.designapp.MainMenu" />
        </activity>
        <activity
            android:name="com.buma.designapp.GoldenRulesListPattern"
            android:label="@string/title_activity_golden_rules_list_pattern" />
        <activity
            android:name="com.buma.designapp.GoldenRulesMeetView"
            android:label="@string/title_activity_golden_rules_meet_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.designapp.HomeGoldenRules" />
        </activity>
        <activity
            android:name="com.buma.designapp.GoldenRulesMeetViewDetail"
            android:label="@string/title_activity_golden_rules_meet_view_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.designapp.GoldenRulesMeetView" />
        </activity>
