            android:name="com.buma.designapp.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.buma.designapp.GreenCardActivity"
            android:label="@string/title_activity_green_card"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.buma.designapp.ListGreenCard"
            android:label="@string/title_activity_list_green_card" />
        <activity
            android:name="com.buma.designapp.TabGreenCard"
            android:label="@string/title_activity_tab_green_card" />
        <activity
            android:name="com.buma.designapp.GreenCardDetailActivity"
            android:label="@string/title_activity_green_card_detail" >

