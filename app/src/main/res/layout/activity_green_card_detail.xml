<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panelScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".GreenCardDetailActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/imagePanels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/no_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imagePanels"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbljenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Bahaya:"
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/greencard_tvjenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lblTempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat:"
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/greencard_tvtempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lblWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Waktu : "
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greencard_tvwaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lblDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bahaya : "
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greencard_tvbahaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lblPlanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rencana Perbaikan : "
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greencard_tvperbaikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Status : "
                android:textColor="#040404"
                android:textSize="12dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greencard_tvstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".........................................."
                android:textSize="11dip"
                android:typeface="sans" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>